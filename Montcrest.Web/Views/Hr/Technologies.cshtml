@model List<Montcrest.Web.ViewModels.Hr.HrTechnologyViewModel>

@{
    ViewData["Title"] = "HR Dashboard";
}

<!-- Load FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --dash-bg: #f4f7f9;
        --card-radius: 16px;
        --primary-blue: #4e73df;
    }

    body {
        background-color: var(--dash-bg);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    /* Card Styling */
    .tech-card {
        border: none;
        border-radius: var(--card-radius);
        transition: all 0.3s ease;
        background: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .tech-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        }

    /* Icon Container */
    .icon-wrapper {
        width: 54px;
        height: 54px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 14px;
        background-color: #f0f3ff;
        color: var(--primary-blue);
        font-size: 1.4rem;
        margin-bottom: 1.25rem;
    }

    /* Typography */
    .tech-title {
        color: #2d3748;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05rem;
        color: #a0aec0;
        font-weight: 600;
        margin-bottom: 2px;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: #1a202c;
        line-height: 1;
    }

    /* Custom Badge */
    .status-badge {
        font-size: 0.7rem;
        padding: 4px 10px;
        border-radius: 50px;
        background: #e6fffa;
        color: #2c7a7b;
        font-weight: 700;
        border: 1px solid #b2f5ea;
    }

    /* Action Button */
    .btn-view-applicants {
        background-color: #fff;
        border: 1px solid #e2e8f0;
        color: #4a5568;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.875rem;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-view-applicants:hover {
            background-color: var(--primary-blue);
            color: #fff;
            border-color: var(--primary-blue);
        }
</style>

<div class="container-fluid py-5 px-4">
    <!-- Header -->
    <div class="page-header d-md-flex justify-content-between align-items-center">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">Recruitment</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>
            <h1 class="h3 fw-bold text-dark">Technology </h1>
        </div>
        <div class="mt-3 mt-md-0">
            <div class="d-flex align-items-center bg-white p-2 px-3 rounded-pill shadow-sm border">
                <div class="me-3">
                    <span class="text-muted small d-block">Total Tech Categories</span>
                    <span class="fw-bold">@Model.Count</span>
                </div>
                <i class="fas fa-chart-pie text-primary fa-lg"></i>
            </div>
        </div>
    </div>

    <!-- Main Grid -->
    <div class="row g-4">
        @foreach (var tech in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card tech-card shadow-sm p-3">
                    <div class="card-body p-2">
                        <!-- Top Row: Icon and Status -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-wrapper">
                                <i class="fas fa-laptop-code"></i>
                            </div>
                            <span class="status-badge">Active</span>
                        </div>

                        <!-- Mid: Content -->
                        <h4 class="tech-title">@tech.TechnologyName</h4>

                        <!-- Bottom Row: Stats and Button -->
                        <div class="mt-4 d-flex align-items-end justify-content-between">
                            <div>
                                <p class="stat-label">Applicants</p>
                                <div class="stat-number">@tech.ApplicationsCount</div>
                            </div>

                            <a href="/Hr/Applicants?technologyId=@tech.TechnologyId"
                               class="btn btn-view-applicants shadow-sm">
                                Manage <i class="fas fa-chevron-right ms-1 small"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- "Add New" Placeholder Card -->
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card tech-card shadow-none border-2 border-dashed d-flex align-items-center justify-content-center py-5"
                 style="border-style: dashed !important; border-color: #cbd5e0 !important; background: transparent;">
                <div class="text-center text-muted">
                    <div class="mb-2">
                        <i class="fas fa-plus-circle fa-2x opacity-50"></i>
                    </div>
                    <span class="fw-bold">New Technology</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Extra Helper Script for dynamic icons (Optional) -->
<script>
    // Logic to vary icon colors or types based on name could be added here
</script>