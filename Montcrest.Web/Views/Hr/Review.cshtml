@using Montcrest.Web.ViewModels.Hr
@model HrApplicantReviewViewModel

@{
    ViewData["Title"] = "Review Candidate";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary: #4f46e5;
        --bg-body: #f8fafc;
        --text-main: #1e293b;
        --text-muted: #64748b;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
    }

    .review-container {
        max-width: 1100px;
        margin: 2rem auto;
    }

    .back-link {
        text-decoration: none;
        color: var(--text-muted);
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 1rem;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: var(--primary);
        }

    .card-modern {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .profile-sidebar {
        background-color: #ffffff;
        padding: 2rem;
        height: 100%;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background: #e0e7ff;
        color: #4338ca;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
        margin-top: 1.25rem;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--text-main);
    }

    /* Soft Badge Styles */
    .badge-soft {
        padding: 0.4em 0.8em;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .bg-soft-primary {
        background: #e0e7ff;
        color: #4338ca;
    }

    .bg-soft-success {
        background: #dcfce7;
        color: #166534;
    }

    .bg-soft-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .action-panel {
        padding: 2rem;
        border-left: 1px solid #f1f5f9;
    }

    .section-title {
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .textarea-custom {
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        padding: 1rem;
        font-size: 0.95rem;
        transition: border-color 0.2s;
    }

        .textarea-custom:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        }

    .btn-approve {
        background-color: #10b981;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
    }

        .btn-approve:hover {
            background-color: #059669;
        }

    .btn-reject {
        background-color: #ef4444;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
    }

        .btn-reject:hover {
            background-color: #dc2626;
        }

    .alert-modern {
        border: none;
        border-radius: 12px;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .action-panel {
            border-left: none;
            border-top: 1px solid #f1f5f9;
        }
    }
</style>

<div class="review-container">
    <a href="/Hr/Technologies" class="back-link">
        <i class="bi bi-arrow-left"></i> Back to Technologies
    </a>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-modern alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-modern alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card-modern">
        <div class="row g-0">
            <!-- Left Panel: Candidate Details -->
            <div class="col-md-4">
                <div class="profile-sidebar">
                    <div class="avatar-circle">
                        @Model.CandidateName.Substring(0, 1).ToUpper()
                    </div>
                    <h4 class="fw-bold mb-1">@Model.CandidateName</h4>
                    <span class="badge-soft @(Model.Status == "Rejected" ? "bg-soft-danger" : "bg-soft-primary")">
                        @Model.Status
                    </span>

                    <div class="info-label">Email Address</div>
                    <div class="info-value">@Model.Email</div>

                    <div class="info-label">Phone Number</div>
                    <div class="info-value">@Model.MobileNumber</div>

                    <div class="info-label">Applied Technology</div>
                    <div class="info-value">@Model.TechnologyName</div>

                    <hr class="my-4" />

                    @if (!string.IsNullOrEmpty(Model.ResumePath))
                    {
                        <a class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2"
                           style="border-radius: 10px; background: var(--primary);"
                           href="@Model.ResumePath"
                           target="_blank"
                           rel="noopener noreferrer">
                            <i class="bi bi-file-earmark-pdf"></i> View Resume
                        </a>
                    }
                    else
                    {
                        <div class="text-danger small"><i class="bi bi-x-circle"></i> Resume not found</div>
                    }
                </div>
            </div>

            <!-- Right Panel: Actions -->
            <div class="col-md-8">
                <div class="action-panel">
                    @if (Model.Status == "Selected" || Model.Status == "Rejected")
                    {
                        <div class="alert alert-info alert-modern mb-4">
                            <i class="bi bi-info-circle-fill me-2"></i> This application is finalized.
                        </div>

                        <h5 class="section-title">Final HR Remarks</h5>
                        <div class="p-3 bg-light rounded-3 text-muted">
                            @(string.IsNullOrEmpty(Model.HrRemarks) ? "No remarks were provided for this decision." : Model.HrRemarks)
                        </div>
                    }
                    else
                    {
                        <h5 class="section-title">HR Assessment</h5>

                        <!-- Approve Form -->
                        <div class="mb-5">
                            <form method="post" action="/Hr/Approve">
                                <input type="hidden" name="applicationId" value="@Model.ApplicationId" />
                                <input type="hidden" name="technologyId" value="@Model.TechnologyId" />

                                <div class="mb-3">
                                    <label class="form-label text-success"><i class="bi bi-check-lg"></i> Approval Remarks</label>
                                    <textarea class="form-control textarea-custom"
                                          name="remarks"
                                          rows="4"
                                          placeholder="Why are you approving this candidate?"
                                          required>@Model.HrRemarks</textarea>
                                </div>

                                <button type="submit" class="btn-approve">
                                    Approve Candidate
                                </button>
                            </form>
                        </div>

                        <div class="separator d-flex align-items-center text-center my-4">
                            <div class="border-top flex-grow-1"></div>
                            <div class="px-3 text-muted small fw-bold">OR</div>
                            <div class="border-top flex-grow-1"></div>
                        </div>

                        <!-- Reject Form -->
                        <div>
                            <form method="post" action="/Hr/Reject">
                                <input type="hidden" name="applicationId" value="@Model.ApplicationId" />
                                <input type="hidden" name="technologyId" value="@Model.TechnologyId" />

                                <div class="mb-3">
                                    <label class="form-label text-danger"><i class="bi bi-x-lg"></i> Rejection Reason</label>
                                    <textarea class="form-control textarea-custom"
                                          name="remarks"
                                          rows="3"
                                          placeholder="Provide specific feedback for rejection..."
                                          required></textarea>
                                </div>

                                <button type="submit" class="btn-reject">
                                    Reject Candidate
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>