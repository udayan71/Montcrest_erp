@model List<Montcrest.Web.ViewModels.MyApplicationViewModel>

@{
    ViewData["Title"] = "My Applications";
}

<!-- Fonts and Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary: #3b82f6;
        --primary-dark: #2563eb;
        --bg-body: #f8fafc;
        --text-main: #1e293b;
        --text-muted: #64748b;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
    }

    .page-header {
        margin-bottom: 2.5rem;
        padding-top: 2rem;
    }

    .header-content h2 {
        font-weight: 700;
        font-size: 1.75rem;
        letter-spacing: -0.025em;
        margin-bottom: 0.5rem;
    }

    .header-content p {
        color: var(--text-muted);
        margin: 0;
    }

    /* Table Card Styling */
    .table-container {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 24px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table thead th {
            background-color: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
            color: var(--text-muted);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1rem 1.5rem;
        }

        .table tbody td {
            padding: 1.25rem 1.5rem;
            vertical-align: middle;
            color: var(--text-main);
            border-bottom: 1px solid #f1f5f9;
            font-size: 0.95rem;
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

    /* Status Badges */
    .status-badge {
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-approved {
        background: #dcfce7;
        color: #166534;
    }

    .status-rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-default {
        background: #f1f5f9;
        color: #475569;
    }

    /* Action Button */
    .btn-review {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-color: white;
        color: var(--primary);
        border: 1px solid var(--primary);
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.85rem;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-review:hover {
            background-color: var(--primary);
            color: white;
            box-shadow: 0 4px 10px rgba(59, 130, 246, 0.2);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

        .empty-state i {
            font-size: 3.5rem;
            color: #cbd5e1;
            margin-bottom: 1rem;
            display: block;
        }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-content">
            <h2>My Applications</h2>
            <p>Track the status of your current job applications.</p>
        </div>
        <a href="javascript:history.back()" class="btn-back">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="table-container">
            <div class="empty-state">
                <i class="bi bi-folder2-open"></i>
                <h4 class="fw-bold">No applications found</h4>
                <p class="text-muted">You haven't applied for any positions yet.</p>
                <a href="/" class="btn btn-primary rounded-pill px-4 mt-2">Browse Jobs</a>
            </div>
        </div>
    }
    else
    {
        <div class="table-container p-0">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Technology</th>
                            <th>Applied Date</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@app.TechnologyName</span>
                                </td>
                                <td>
                                    <span class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</span> @* Replace with actual date if available in Model *@
                                </td>
                                <td>
                                    @{
                                        var statusClass = app.Status.ToLower() switch
                                        {
                                            "pending" => "status-pending",
                                            "approved" or "hired" or "accepted" => "status-approved",
                                            "rejected" or "declined" => "status-rejected",
                                            _ => "status-default"
                                        };

                                        var statusIcon = app.Status.ToLower() switch
                                        {
                                            "pending" => "bi-clock-history",
                                            "approved" or "hired" or "accepted" => "bi-check-circle",
                                            "rejected" or "declined" => "bi-x-circle",
                                            _ => "bi-info-circle"
                                        };
                                    }
                                    <span class="status-badge @statusClass">
                                        <i class="bi @statusIcon"></i> @app.Status
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Candidate"
                                       asp-action="Review"
                                       asp-route-applicationId="@app.ApplicationId"
                                       class="btn-review">
                                        <i class="bi bi-eye"></i> Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<div class="mb-5"></div>