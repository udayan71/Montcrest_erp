@model List<Montcrest.Web.DTOs.TechnologyDto>

@{
    ViewData["Title"] = "Available Technologies";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary: #3b82f6;
        --primary-dark: #2563eb;
        --bg-body: #f8fafc;
        --text-main: #1e293b;
        --text-muted: #64748b;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 2.5rem;
        padding-top: 2rem;
    }

    .header-content h2 {
        font-weight: 700;
        font-size: 1.75rem;
        letter-spacing: -0.025em;
        margin-bottom: 0.5rem;
        color: var(--text-main);
    }

    .header-content p {
        color: var(--text-muted);
        margin: 0;
    }

    /* Technology Card Styling */
    .tech-card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .tech-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
            border-color: var(--primary);
        }

    .card-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    /* Tech Icon/Avatar */
    .tech-icon {
        width: 64px;
        height: 64px;
        background: #eff6ff;
        color: var(--primary);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .tech-card:hover .tech-icon {
        background: var(--primary);
        color: white;
    }

    .tech-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-main);
        margin-bottom: 0.75rem;
    }

    .tech-desc {
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.5;
        margin-bottom: 2rem;
        flex-grow: 1;
    }

    /* Button Styling */
    .btn-apply {
        background-color: var(--primary);
        color: white;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        text-decoration: none;
        width: 100%;
        transition: background 0.2s;
        border: none;
    }

        .btn-apply:hover {
            background-color: var(--primary-dark);
            color: white;
        }

    .btn-my-apps {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: white;
        color: var(--text-main);
        border: 1px solid #e2e8f0;
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-my-apps:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
            color: var(--primary);
        }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 24px;
        border: 2px dashed #e2e8f0;
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-content">
            <h2>Available Opportunities</h2>
            <p>Explore technologies and kickstart your application process.</p>
        </div>
        <a asp-controller="Candidate" asp-action="MyApplications" class="btn-my-apps">
            <i class="bi bi-briefcase"></i> My Applications
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-search" style="font-size: 3rem; color: #cbd5e1;"></i>
            <h4 class="mt-3 fw-bold">No Open Positions</h4>
            <p class="text-muted">We don't have any open technologies for application right now. Check back later!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var tech in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="tech-card">
                        <div class="card-body">
                            <!-- Placeholder icon using first letter of Technology name -->
                            <div class="tech-icon">
                                @tech.Name.Substring(0, 1).ToUpper()
                            </div>

                            <h4 class="tech-name">@tech.Name</h4>

                            <p class="tech-desc">
                                We are looking for talented individuals to join our <strong>@tech.Name</strong> team.
                                Apply today to start your journey with Montcrest.
                            </p>

                            <a class="btn-apply" href="/Candidate/Apply/@tech.Id">
                                Apply Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="mb-5"></div> <!-- Bottom Spacing -->