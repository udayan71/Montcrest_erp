@model List<Montcrest.Web.ViewModels.Manager.ManagerLeaveApplicationViewModel>

@{
    ViewData["Title"] = "Leave Applications";
}

<!-- Fonts and Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary: #3b82f6;
        --primary-dark: #2563eb;
        --bg-body: #f8fafc;
        --text-main: #1e293b;
        --text-muted: #64748b;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 2rem;
        padding-top: 2rem;
    }

    .header-content h2 {
        font-weight: 700;
        font-size: 1.75rem;
        letter-spacing: -0.025em;
        margin-bottom: 0.5rem;
        color: var(--text-main);
    }

    .header-content p {
        color: var(--text-muted);
        margin: 0;
    }

    /* Table Container Styling */
    .table-container {
        background: white;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        box-shadow: var(--card-shadow);
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table thead {
            background-color: #f8fafc;
        }

            .table thead th {
                font-weight: 600;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.025em;
                color: var(--text-muted);
                padding: 1.25rem 1rem;
                border-bottom: 1px solid #e2e8f0;
            }

        .table tbody td {
            padding: 1.25rem 1rem;
            vertical-align: middle;
            color: var(--text-main);
            font-size: 0.95rem;
            border-bottom: 1px solid #f1f5f9;
        }

    /* Modern Badges */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.75rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-pending {
        background: #fffbeb;
        color: #92400e;
    }

    .status-approved {
        background: #f0fdf4;
        color: #166534;
    }

    .status-rejected {
        background: #fef2f2;
        color: #991b1b;
    }

    /* Form Controls in Table */
    .action-input {
        border-radius: 8px;
        font-size: 0.85rem;
        border: 1px solid #e2e8f0;
        padding: 0.4rem 0.75rem;
        margin-bottom: 0.5rem;
    }

    .btn-action-submit {
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.8rem;
        padding: 0.4rem;
        transition: all 0.2s;
    }

    .employee-name {
        font-weight: 700;
        display: block;
        color: var(--text-main);
    }

    .employee-email {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 24px;
        border: 2px dashed #e2e8f0;
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-content">
            <h2>Leave Applications</h2>
            <p>Review and manage team leave requests.</p>
        </div>
        <a href="javascript:history.back()" class="btn-back">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox" style="font-size: 3rem; color: #cbd5e1;"></i>
            <h4 class="mt-3 fw-bold">No Applications</h4>
            <p class="text-muted">There are currently no leave applications pending review.</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Leave Details</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Applied On</th>
                            <th style="min-width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leave in Model)
                        {
                            <tr>
                                <td>
                                    <span class="employee-name">@leave.EmployeeName</span>
                                    <span class="employee-email">@leave.EmployeeEmail</span>
                                </td>
                                <td>
                                    <div class="fw-bold text-primary mb-1">@leave.LeaveType</div>
                                    <small class="text-muted" title="@leave.Reason">
                                        @(leave.Reason.Length > 40 ? leave.Reason.Substring(0, 40) + "..." : leave.Reason)
                                    </small>
                                </td>
                                <td>
                                    <div class="small">
                                        <i class="bi bi-calendar-range me-1 text-muted"></i>
                                        @leave.FromDate.ToString("dd MMM") - @leave.ToDate.ToString("dd MMM yyyy")
                                    </div>
                                </td>
                                <td>
                                    @if (leave.Status.ToString() == "Pending")
                                    {
                                        <span class="status-badge status-pending">
                                            <i class="bi bi-clock-history"></i> Pending
                                        </span>
                                    }
                                    else if (leave.Status.ToString() == "Approved")
                                    {
                                        <span class="status-badge status-approved">
                                            <i class="bi bi-check2-circle"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-rejected">
                                            <i class="bi bi-x-circle"></i> Rejected
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="text-muted small">@leave.AppliedOn.ToString("dd MMM yyyy")</span>
                                </td>
                                <td>
                                    @if (leave.Status.ToString() == "Pending")
                                    {
                                        <div class="d-flex flex-column gap-1">
                                            <form method="post" action="/Manager/ApproveLeave">
                                                <input type="hidden" name="leaveId" value="@leave.LeaveId" />
                                                <input type="text" name="remarks" class="form-control form-control-sm action-input" placeholder="Approval remarks..." />
                                                <button type="submit" class="btn btn-success btn-action-submit w-100">
                                                    Approve
                                                </button>
                                            </form>

                                            <form method="post" action="/Manager/RejectLeave" class="mt-2">
                                                <input type="hidden" name="leaveId" value="@leave.LeaveId" />
                                                <input type="text" name="remarks" class="form-control form-control-sm action-input" placeholder="Reason for rejection..." required />
                                                <button type="submit" class="btn btn-outline-danger btn-action-submit w-100">
                                                    Reject
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="p-2 rounded bg-light border border-dashed">
                                            <div class="text-muted" style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase;">Review Remarks</div>
                                            <div class="small text-dark">
                                                @(string.IsNullOrEmpty(leave.ManagerRemarks) ? "No remarks provided." : leave.ManagerRemarks)
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<div class="mb-5"></div>